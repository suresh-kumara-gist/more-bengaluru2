---
layout: base.njk
title: Home
locale: en
---

<!-- Hero Section -->
<section class="bg-blue-600 text-white py-16 rounded-lg mb-12 fade-in">
    <div class="text-center">
        <h2 class="text-4xl font-bold mb-4">Welcome to Inka Bengaluru</h2>
        <p class="text-xl opacity-90">Your source for the latest news and updates from Greater Bengaluru</p>
    </div>
</section>

<!-- Latest News Section -->
<section class="mb-12">
    <h2 class="text-3xl font-bold mb-8 border-b-2 border-blue-200 pb-2">{{ site.latest_news }}</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {% for article in collections.news_en | reverse | slice(0, 3) %}
        <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 fade-in">
            {% if article.data.image %}
            <div class="h-48 overflow-hidden">
                {% image article.data.image, article.data.title, "400px" %}
            </div>
            {% else %}
            <div class="h-48 bg-gray-300 flex items-center justify-center">
                <span class="text-gray-600">Image coming soon</span>
            </div>
            {% endif %}
            
            <div class="p-6">
                <div class="flex items-center justify-between mb-3">
                    <time class="text-sm text-gray-500" datetime="{{ article.date | isoDate }}">
                        {{ article.date | postDate }}
                    </time>
                    {% if article.data.categories %}
                    <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">
                        {{ article.data.categories[0] }}
                    </span>
                    {% endif %}
                </div>
                
                <h3 class="text-xl font-bold mb-2">{{ article.data.title }}</h3>
                <p class="text-gray-600 mb-4">{{ article.data.summary }}</p>
                <a href="{{ article.url }}" class="text-blue-600 font-semibold hover:text-blue-800">
                    {{ site.read_more }} â†’
                </a>
            </div>
        </article>
        {% endfor %}
    </div>
</section>