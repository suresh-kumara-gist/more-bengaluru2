title: ಮುಖಪುಟ
locale: kn
---

<!-- Hero Section -->
<section class="bg-green-600 text-white py-16 rounded-lg mb-12 fade-in">
    <div class="text-center">
        <h2 class="text-4xl font-bold mb-4 kannada-text">ಇಂಕಾ ಬೆಂಗಳೂರಿಗೆ ಸ್ವಾಗತ</h2>
        <p class="text-xl opacity-90 kannada-text">ಗ್ರೇಟರ್ ಬೆಂಗಳೂರಿನ ತಾಜಾ ವಾರ್ತೆಗಳು ಮತ್ತು ನವೀಕರಣಗಳ ಮೂಲ</p>
    </div>
</section>

<!-- Latest News Section -->
<section class="mb-12">
    <h2 class="text-3xl font-bold mb-8 border-b-2 border-green-200 pb-2 kannada-text">{{ site.latest_news }}</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {% for article in collections.news_kn | reverse | slice(0, 3) %}
        <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 fade-in">
            {% if article.data.image %}
            <div class="h-48 overflow-hidden">
                {% image article.data.image, article.data.title, "400px" %}
            </div>
            {% else %}
            <div class="h-48 bg-gray-300 flex items-center justify-center">
                <span class="text-gray-600 kannada-text">ಚಿತ್ರ ಶೀಘ್ರದಲ್ಲೇ ಬರಲಿದೆ</span>
            </div>
            {% endif %}
            
            <div class="p-6">
                <div class="flex items-center justify-between mb-3">
                    <time class="text-sm text-gray-500 kannada-text" datetime="{{ article.date | isoDate }}">
                        {{ article.date | postDateKannada }}
                    </time>
                    {% if article.data.categories %}
                    <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded kannada-text">
                        {{ article.data.categories[0] }}
                    </span>
                    {% endif %}
                </div>
                
                <h3 class="text-xl font-bold mb-2 kannada-text">{{ article.data.title }}</h3>
                <p class="text-gray-600 mb-4 kannada-text">{{ article.data.summary }}</p>
                <a href="{{ article.url }}" class="text-green-600 font-semibold hover:text-green-800 kannada-text">
                    {{ site.read_more }} →
                </a>
            </div>
        </article>
        {% endfor %}
    </div>
</section>